{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div
		style="min-height: 100vh; padding: 1.5rem; background-color: #f9fafb;">
		{# Header with button #}
		<header style="margin-bottom: 2.5rem;">
			<button style="background-color: #2563eb; color: white; font-weight: 500; padding: 0.5rem 1.5rem; border-radius: 0.5rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); transition: all 0.2s;">
				Chat Secure
			</button>
		</header>

		{# Main content #}
		<main
			style="max-width: 56rem; margin-left: auto; margin-right: auto;">
			{# Welcome section #}
			<section style="margin-bottom: 3rem; text-align: center;">
				<h1 style="font-size: 1.875rem; font-weight: 700; color: #1f2937; margin-bottom: 1.5rem;">Bonjour</h1>
				<p style="color: #4b5563; line-height: 1.625; font-size: 1.125rem; max-width: 48rem; margin-left: auto; margin-right: auto;">
					Ce site propose une authentification sécurisée avec fonctionnalités de connexion et d'inscription,
																														                permettant de créer et gérer des messages personnalisés sur notre forum de discussion.
				</p>
			</section>

			{# Action section #}
			<section
				style="display: flex; flex-direction: column; align-items: center; justify-content: space-between; gap: 2.5rem;">
				{# Image #}
				<div style="flex: 1;">
					<img src="{{ asset('images/image apr 7, 2025, 11_33_35 am.png') }}" alt="Interface d'authentification" style="border-radius: 0.75rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1); width: 100%; max-width: 28rem; margin-left: auto; margin-right: auto;">
				</div>

				{# Auth buttons #}
				<div style="flex: 1; display: flex; flex-direction: column; gap: 1.5rem;">
					<h2 style="font-size: 1.25rem; font-weight: 600; color: #0369a1;">Commencer maintenant</h2>
					<div style="display: flex; flex-direction: column; gap: 1rem;">
						<a href="{{ path('app_register') }}" style="display: block; background-color: #10b981; color: white; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-align: center; box-shadow: 0 20px 25px -5px rgba(16, 185, 129, 0.3); transition: all 0.3s ease-in-out;">
							S'inscrire
						</a>
						<a href="{{ path('app_login') }}" style="display: block; background-color: #9333ea; color: white; font-weight: 500; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-align: center; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); transition: all 0.2s;">
							Se connecter
						</a>
					</div>
				</div>
			</section>
		</main>
	</div>
{% endblock %}
