{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div
		class="min-h-screen p-6 bg-gray-50">
		{# Header with button #}
		<header class="mb-10">
			<button class="bg-blue-600 text-white font-medium py-2 px-6 rounded-lg shadow-md transition-all duration-200">
				Chat Secure
			</button>
		</header>

		{# Main content #}
		<main
			class="max-w-4xl mx-auto">
			{# Welcome section #}
			<section class="mb-12 text-center">
				<h1 class="text-3xl font-bold text-gray-800 mb-6">Bonjour</h1>
				<p class="text-gray-600 leading-relaxed text-xl max-w-3xl mx-auto">
					Ce site propose une authentification sécurisée avec fonctionnalités de connexion et d'inscription,
										                    permettant de créer et gérer des messages personnalisés sur notre forum de discussion.
				</p>
			</section>

			{# Action section #}
			<section
				class="flex flex-col items-center justify-between gap-10 md:flex-row">
				{# Image #}
				<div class="flex-1">
					<img src="{{ asset('images/image apr 7, 2025, 11_33_35 am.png') }}" alt="Interface d'authentification" class="rounded-xl shadow-xl w-full max-w-md mx-auto">
				</div>

				{# Auth buttons #}
				<div class="flex-1 flex flex-col gap-6">
					<h2 class="text-xl font-semibold text-sky-700">Commencer maintenant</h2>
					<div class="flex flex-col gap-4">
						<a href="{{ path('app_register') }}" class="block bg-emerald-500 text-white font-semibold py-3 px-6 rounded-lg text-center shadow-lg hover:shadow-emerald-300/30 transition-all duration-300">
							S'inscrire
						</a>
						<a href="{{ path('app_login') }}" class="block bg-purple-600 text-white font-medium py-3 px-6 rounded-lg text-center shadow-md transition-all duration-200">
							Se connecter
						</a>
					</div>
				</div>
			</section>
		</main>
	</div>
{% endblock %}
