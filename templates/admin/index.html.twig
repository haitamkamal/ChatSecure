{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<div class="user-info">
		{% if app.user %}
			<p>You are logged in as
				<strong>{{ app.user.userIdentifier }}</strong>,</p>
			<a href="{{ path('app_logout') }}" class="logout-link">Logout</a>
		{% else %}
			<p>You are not logged in.</p>
		{% endif %}
		<p class="role">Roles: Admin</p>


	</div>


	{% if app.user %}
		{% for article in articles %}
			<div class="article">
				<h1 class="article-title">{{ article.title }}</h1>
				<h3 class="article-content-heading">Content:</h3>
				<p class="article-content">{{ article.Contente }}</p>
				<a href="{{ path('Delete_message', {'id': article.id}) }}" class="delete-link">Supprimer</a>
			</div>
		{% endfor %}
	{% endif %}


	<style>
		/* Base styles */
		body {
			font-family: Arial, sans-serif;
			line-height: 1.6;
			margin: 0;
			padding: 0;
			background-color: #f4f4f4;
		}

		.container {
			max-width: 1200px;
			margin: 20px auto;
			padding: 20px;
			background-color: white;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}

		/* User Info */
		.user-info {
			padding: 10px;
			background-color: #e7f7e5;
			border-radius: 5px;
			margin-bottom: 20px;
		}

		.user-info a {
			text-decoration: none;
			color: #ff4d4d;
			font-weight: bold;
		}

		.user-info a:hover {
			text-decoration: underline;
		}

		/* Article Styles */
		.article {
			margin-bottom: 20px;
			padding: 15px;
			background-color: #fff;
			border: 1px solid #ddd;
			border-radius: 8px;
			box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
		}

		.article-title {
			font-size: 1.8em;
			color: #333;
			margin-bottom: 10px;
		}

		.article-content-heading {
			font-weight: bold;
			margin-top: 10px;
		}

		.article-content {
			color: #555;
			margin-bottom: 10px;
		}

		.delete-link {
			color: #e74c3c;
			text-decoration: none;
			font-weight: bold;
		}

		.delete-link:hover {
			text-decoration: underline;
		}

		/* Role Info */
		.role {
			font-size: 1.1em;
			margin-top: 20px;
			font-weight: bold;
			color: #333;
		}
	</style>
{% endblock %}
