{% extends 'base.html.twig' %}

{% block title %}Hello UserController!
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4 max-w-4xl">
		{% if app.user %}
			<div class="mb-4 text-gray-700">
				You are logged in as
				<strong class="font-semibold">{{ app.user.userIdentifier }}</strong>,
				<a href="{{ path('app_logout') }}" class="text-red-600 hover:text-red-800 hover:underline ml-1">Logout</a>
			</div>

			<p class="font-bold mb-4">Roles: User</p>
			<a href="{{ path('upgrade_to_admin') }}" class="inline-block mb-4 text-orange-500 font-bold hover:text-orange-600 hover:underline">Vip</a>
			<br>
		{% endif %}

		<a href="{{ path('app_nouveaux_messages') }}" class="inline-block my-4 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
			Cr√©er de nouveaux messages
		</a>

		<div class="space-y-8">
			{% for Article in Articles %}
				<div class="p-4 border border-gray-200 rounded">
					<h3 class="text-gray-800 font-semibold mb-2">Titre</h3>
					<p class="mb-4">{{ Article.title }}</p>

					<h3 class="text-gray-800 font-semibold mb-2">Content</h3>
					<div class="text-gray-700 leading-relaxed">
						{{ Article.Contente }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
