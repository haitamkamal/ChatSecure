{% extends 'base.html.twig' %}

{% block body %}
	<div class="max-w-lg mx-auto p-6 bg-gray-200 rounded-lg shadow-lg mt-10">
		<h1 class="text-2xl font-semibold text-gray-800 mb-4">Upgrade to Admin</h1>

		<form action="{{ path('upgrade_to_admin') }}" method="POST" class="space-y-6">
			<div>
				<label for="admin_password" class="block text-sm font-medium  text-gray-700 mb-1">
					Enter admin password
				</label>
				<input type="password" name="admin_password" id="admin_password" required autocomplete="current-password" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
			</div>

			<div>
				<button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium  bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
					Upgrade to Admin
				</button>
			</div>
		</form>
	</div>
{% endblock %}
